generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  id       String @id
  prefix   String
  language String @default("en-US")
  pushed   Int    @default(0)

  webhook Webhook?

  enableSnipeForEveryone Boolean  @default(false)
  commandRestrictions    String[] @default([])

}

model User {
  id String @id

  steamId String?

  pushed      Int      @default(0)
  pushedToday Int      @default(0)
  lastActive  DateTime @default(now())
}

model Webhook {
  id    String @id
  value String @unique

  type WebhookType

  Guild     Guild    @relation(fields: [id], references: [id])
  createdAt DateTime @default(now())
}

enum WebhookType {
  Users
  Channels
}
