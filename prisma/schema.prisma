generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["metrics", "jsonProtocol"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Guild {
  id           String @id
  prefix       String @default("pls ")
  language     String @default("en-US")
  legacyPushed Int?

  webhookId String?
  webhook   Webhook? @relation(fields: [webhookId], references: [id])
}

model User {
  id String @id

  legacyPushed Int?
  steamId      String?

  webhookId String?
  webhook   Webhook? @relation(fields: [webhookId], references: [id])
}

model Webhook {
  id    String @id
  value String @unique
  type  String

  Guild Guild[]
  User  User[]

  createdAt DateTime @default(now())
}

model Pushcart {
  id        Int      @id @default(autoincrement())
  userId    String
  guildId   String
  pushed    Int
  timestamp DateTime @default(now())
}
