{
  "extends": "@sapphire/ts-config",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": ["DOM"],
    "target": "ESNext",
		"removeComments": true,
    "paths": {
      "#/*": ["src/*"],
      "#lib/*": ["src/lib/*"]
    }
  },
  "include": ["src", "src/**/*.json"]
}
