{
  "extends": "@sapphire/ts-config",
  "compilerOptions": {
    "rootDir": "src",
    "target": "ESNext",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "skipLibCheck": true,
    "baseUrl": "src",
    "lib": ["DOM", "ES2021"],
    "removeComments": true,
    "paths": {
      "#lib/types": ["lib/types"],
      "#utils/*": ["lib/utils/*"],
      "#lib/*": ["lib/*"],
      "#api/*": ["api/*"],
      "#root/*": ["*"]
    }
  },
  "include": ["src", "src/**/*.json"]
}
