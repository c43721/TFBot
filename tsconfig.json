{
  "extends": "@sapphire/ts-config/decorators",
  "compilerOptions": {
    "module": "NodeNext",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "skipLibCheck": true,
    "baseUrl": "src",
    "lib": ["DOM", "ESNext"],
    "removeComments": true,
    "paths": {
      "#lib/types": ["lib/types"],
      "#utils/*": ["lib/utils/*"],
      "#lib/*": ["lib/*"],
      "#api/*": ["lib/api/*"],
      "#root/*": ["*"]
    }
  },
  "include": ["src", "src/languages/**/*.json", "src/drizzle.config.ts"]
}
